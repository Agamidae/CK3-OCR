						datamodel = "[GameSetup.GetDlcCollection.GetDlcs]"
						spacing = 5

						item = {
							hbox = {
								widget = {
									visible = "[DlcItem.GetDlc.IsMajor]"
									size = { 47 47 }
									dlc_button = {}
								}

								widget = {
									visible = "[Not( DlcItem.GetDlc.IsMajor )]"
									size = { 33 33 }
									dlc_button = {}
								}
							}
						}
					}

			       expand = { }
			    }
			}


