			                        #no background
			                    }

			                    blockoverride "ai_icon_size"
			                    {
			                        size = {36 36}
			                    }
			                }
			            }
			        }

					text_single = {
						raw_text = "[GetDataModelSize(GameSetup.GetDlcCollection.GetDlcs)] DLCs enabled."
					}

