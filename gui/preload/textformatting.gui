	format = {
		name = credits_title
		format = "color:{0.8, 0.8, 0.8};SIZE:70;FONT:MapFont"
	}

	format = {
		name = credits_header
		format = "color:{0.8, 0.8, 0.8};SIZE:30;glow_color:{0,0,0,1};FONT:MapFont"
	}

	format = {
		name = credits_subheader
		format = "color:{0.5, 0.5, 0.5};bold;SIZE:18;glow_color:{0,0,0,1}"
	}

	format = {
		name = credits_entries
		format = "true_white;SIZE:15;glow_color:{0,0,0,1}"
	}
}
