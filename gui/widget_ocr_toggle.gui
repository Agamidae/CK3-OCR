	widget = {
		size = { 100% 100% }
		alwaystransparent = yes
		using = TooltipFocus
		visible = "[GetVariableSystem.Exists('sending_army')]"

		button = {
			alwaystransparent = "[Not(GetVariableSystem.Exists('sending_army'))]"
			parentanchor = center
			widgetanchor = left|vcenter
			onmousehierarchyenter = "[PdxGuiTriggerAllAnimations('army_sent')]"
			onmousehierarchyenter = "[GetVariableSystem.Clear('sending_army')]"
			position = { -50 0 }

			state = {
				name = army_sent
				delay = 2
				on_finish = "[PdxGuiTriggerAllAnimations('show_army_window')]"
			}
			# texture = "gfx/interface/colors/white.dds"

			flowcontainer = {
				ignoreinvisible = yes
				resizeparent = yes
				margin = { 50 200 }
				direction = vertical


				text_single = {
					raw_text = "Right click here to send the army to [GetVariableSystem.Get('sending_army')]."
					autoresize = yes
				}

				text_single = {
					raw_text = "Or press Control 2 if you use Autohotkey."
				}

				text_single = {
					raw_text = "Cancel with Escape."
				}
			}
		}

		button = {
			shortcut = close_window
			onclick = "[GetVariableSystem.Clear('sending_army')]"
		}
	}
