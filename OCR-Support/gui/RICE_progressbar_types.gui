types RICE_progress_bar_types {
	type RICE_progressbars_greenland = widget {
		size = { 450 53 }
		vbox = {
			spacing = 3
			widget = {
				size = { 430 25 }
				text_label_left = {
					raw_text = "RICE_resilience_header"
				}
				RICE_progress_bar_resilience = {
					parentanchor = right|vcenter
				}
			}
			widget = {
				size = { 430 25 }
				text_label_left = {
					raw_text = "RICE_networks_header"
				}
				RICE_progress_bar_networks = {
					parentanchor = right|vcenter
				}
			}
		}
	}

	type RICE_progressbars_all = widget {
		size = { 450 81 }

		vbox = {
			spacing = 3
