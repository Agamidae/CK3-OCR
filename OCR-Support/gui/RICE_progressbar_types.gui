	type RICE_progress_bar = widget {
		size = { 330 24 }
		parentanchor = center
		hbox = {
			layoutpolicy_horizontal = expanding
			alpha = 0
			widget = {
				size = { 1 20 }
				layoutpolicy_horizontal = expanding
				block "current_value" {
					layoutstretchfactor_horizontal = "[FixedPointToFloat(GetPlayer.MakeScope.ScriptValue('RICE_resilience_progressbar_value'))]"
				}
				RICE_progress_bar_icon = {
				}
			}
			widget = {
				size = { 1 20 }
				layoutpolicy_horizontal = expanding
				block "value_left_until_max" {
					layoutstretchfactor_horizontal = "[FixedPointToFloat(GetPlayer.MakeScope.ScriptValue('RICE_resilience_progressbar_remainder_value'))]"
				}

				icon = {
					size = { 100% 100% }
					block "background_texture" {
						texture = "gfx/interface/colors/gold_darker.dds"
					}
					modify_texture = {
						texture = "gfx/interface/component_masks/mask_fade_horizontal.dds"
						blend_mode = alphamultiply
						alpha = 0.3
					}

					modify_texture = {
						texture = "gfx/interface/component_masks/mask_scratches.dds"
						blend_mode = alphamultiply
						spriteType = corneredtiled
						alpha = 0.3
						texture_density = 3
					}
				}
			}
		}

		icon = {
			name = "overlay"
			texture = "gfx/interface/component_tiles/tile_dark_area_01.dds"
			spriteType = Corneredtiled
			spriteborder = { 5 5 }
			alpha = 0.6
			size = { 100% 100% }
		}

		text_single = {
			parentanchor = vcenter
			position = { 0 -1 }
			# align = left
			block "text_value" {
				raw_text = "[GetPlayer.MakeScope.ScriptValue('RICE_resilience_progressbar_value')|0]%."
			}
		}
	}

	type RICE_progress_bar_icon = icon {
		size = { 100% 100% }
		block "base_texture" {
			texture = "gfx/interface/colors/gold.dds"
		}
		modify_texture = {
			texture = "gfx/interface/component_masks/mask_fade_horizontal.dds"
			blend_mode = alphamultiply
			alpha = 0.3
		}

		modify_texture = {
			texture = "gfx/interface/component_masks/mask_scratches.dds"
			blend_mode = alphamultiply
			spriteType = corneredtiled
			alpha = 0.3
			texture_density = 3
		}

		modify_texture = {
			name = "flash"
			texture = "gfx/interface/colors/white.dds"
			blend_mode = colordodge
			alpha = 0
		}

		modify_texture = {
			name = "lvl3_glow"
			texture = "gfx/interface/colors/gold.dds"
			blend_mode = colordodge
			alpha = 0
		}

		modify_texture = {
			name = "clouds"
			texture = "gfx/interface/component_masks/mask_clouds_solid.dds"
			blend_mode = mask
			spriteType = corneredtiled
			texture_density = 1
		}

		state = {
			name = "lvl3_glow_a"
			next = "lvl3_glow_b"
			duration = 0.6
			trigger_on_create = yes
			using = Animation_Curve_Default

			modify_texture = {
				name = "lvl3_glow"
				alpha = 0.5
			}
		}

		state = {
			name = "lvl3_glow_b"
			next = "lvl3_glow_a"
			duration = 1.5
			using = Animation_Curve_Default

			modify_texture = {
				name = "lvl3_glow"
				alpha = 0
			}
		}

		state = {
			name = "fade_out"

			duration = 0.8
			bezier = { 0 0.5 0.5 1 }


			modify_texture = {
				name = "flash"
				alpha = 0
			}
		}

		state = {
			name = a
			next = b
			trigger_on_create = yes

			modify_texture = {
				name = "clouds"
				translate_uv = { 1 0 }
			}
		}

		state = {
			name = b
			next = a
			duration = 15

			modify_texture = {
				name = "clouds"
				translate_uv = { -1 0 }
			}
		}
	}
}
