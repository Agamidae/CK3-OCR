# Font used in-game
font = {
	name = "StandardGameFont"

	fontstyle = {
		style = regular
		fontfiles = "Gitan_0"
	}

	fontstyle = {
		style = bold
		fontfiles = "Gitan_0"
	}

	fontstyle = {
		style = italic
		fontfiles = "Gitan_0"
	}

	fontstyle = {
		style = bold|italic
		fontfiles = "Gitan_0"
	}

	underlineformats = {
		default = {
			thickness = 1
			offset = 0.12
		}
	}
}

# Title font
